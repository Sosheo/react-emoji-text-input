{
    "compilerOptions": {
      "target": "es2020",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "outDir": "./dist",
      "outDir": "./example/src/components",
      "plugins": [
        {
          "name": "next"
        }
      ],
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["./components/**/*.ts", "./components/**/*.tsx"],
    "exclude": ["node_modules"]
}
  